<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#8AE2E2"/>  <!-- Fondo seleccionado -->
            <stroke android:width="2dp" android:color="#39B7B7"/> <!-- Borde seleccionado -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Estado no seleccionado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- Fondo no seleccionado -->
            <stroke android:width="2dp" android:color="#EAEAEA"/> <!-- Borde gris -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</selector>
