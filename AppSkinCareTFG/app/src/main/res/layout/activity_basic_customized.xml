<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/basic_customized"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título 1 -->
        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Title1Customized"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Grupo de opciones 1 -->
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton android:id="@+id/radio1_option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 1" />
            <RadioButton android:id="@+id/radio1_option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 2" />
            <RadioButton android:id="@+id/radio1_option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 3" />
            <RadioButton android:id="@+id/radio1_option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 4" />
        </RadioGroup>

        <!-- Título 2 -->
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Title2Customized"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Grupo de opciones 2 -->
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton android:id="@+id/radio2_option1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 1" />
            <RadioButton android:id="@+id/radio2_option2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 2" />
            <RadioButton android:id="@+id/radio2_option3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 3" />
            <RadioButton android:id="@+id/radio2_option4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Opción 4" />
        </RadioGroup>
        <!-- Botón -->
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ButtonCustomized"
            android:layout_gravity="center"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
