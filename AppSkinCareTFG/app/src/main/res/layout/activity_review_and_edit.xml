<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/RW"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/TituloTxRw"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <!-- Botones personalizados -->
        <es.upgrade.UI.CustomViewOptionsRoutine
            android:id="@+id/tvSkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/ic_face"
            app:buttonText="@string/ButtonTextRw" />

        <es.upgrade.UI.CustomViewOptionsRoutine
            android:id="@+id/tvSchedeule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/ic_plus"
            app:buttonText="Momento del dia" />

        <es.upgrade.UI.CustomViewOptionsRoutine
            android:id="@+id/tvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/products_svgrepo_com"
            app:buttonText="Tipo Skincare" />

        <es.upgrade.UI.CustomViewOptionsRoutine
            android:id="@+id/tvBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/ic_calendar"
            app:buttonText="Presupuesto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">
        <Button
            android:id="@+id/btn_editar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="46dp"
            android:text="Editar"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/button_review_edit" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Continuar"
            android:textColor="#000000"
            android:textSize="16sp"
            android:background="@drawable/button_review_continue" />
    </LinearLayout>


</LinearLayout>
