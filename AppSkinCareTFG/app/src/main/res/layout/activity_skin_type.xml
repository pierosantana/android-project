<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/skinTypeActivity"
    android:background="@color/backgroundApplication"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <TextView
        android:id="@+id/tv_configuracion"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/TVConfiguracion"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <include
        android:id="@+id/include_progress"
        layout="@layout/progressbar" />
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/container_background"
        android:padding="16dp"
        android:visibility="visible"/>
    <FrameLayout
        android:id="@+id/skin_description_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ButtonAvanzar"
        android:textStyle="bold"
        android:textColor="@color/colorLetterButtons"
        android:background="@drawable/button_background"
        android:enabled="false" />

    <TextView
        android:id="@+id/NoIdeaSkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/NoIdeaSkin"
        android:textSize="16sp"/>


</LinearLayout>