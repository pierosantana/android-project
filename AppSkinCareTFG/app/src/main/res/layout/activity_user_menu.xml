<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.UserMenu"
    android:background="#E5FFF9">

    <!-- Contenedor para la imagen y el botón de editar -->
    <FrameLayout
        android:id="@+id/profileContainer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen circular del perfil -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar"
            android:scaleType="centerCrop" />

        <!-- Botón de editar sobre la imagen -->
        <ImageButton
            android:id="@+id/editImagebutton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_edit"
            android:contentDescription="Editar foto"
            app:tint="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jelly Grande"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/skinType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal Skin"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/skinType">

        <!-- Botones personalizados -->
        <es.upgrade.UI.CustomViewMenu
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/ic_face"
            app:buttonText="Mi Perfil" />

        <es.upgrade.UI.CustomViewMenu
            android:id="@+id/btnNewRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/ic_plus"
            app:buttonText="Nueva Rutina" />

        <es.upgrade.UI.CustomViewMenu
            android:id="@+id/btnMyRoutines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/products_svgrepo_com"
            app:buttonText="Mis Rutinas" />

        <es.upgrade.UI.CustomViewMenu
            android:id="@+id/btnCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonIcon="@drawable/ic_calendar"
            app:buttonText="Calendario" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/button_logout"
        android:drawableLeft="@drawable/logout_rounded_left"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Sign Out"
        android:textColor="#02433D"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />
</androidx.constraintlayout.widget.ConstraintLayout>
