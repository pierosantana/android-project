<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SelectedOption"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Opción 1 -->
            <LinearLayout
                android:id="@+id/rd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/radio_icon1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/radio_button_circle_unselected" />

                <RadioButton
                    android:id="@+id/radio_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/RadioButonOpcion1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp" />
            </LinearLayout>

            <!-- Opción 2 -->
            <LinearLayout
                android:id="@+id/rd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/radio_icon2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/radio_button_circle_unselected" />

                <RadioButton
                    android:id="@+id/radio_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/RadioButonOpcion2"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp" />
            </LinearLayout>

            <!-- Opción 3 -->
            <LinearLayout
                android:id="@+id/rd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_button_background"
                android:padding="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/radio_icon3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/radio_button_circle_unselected" />

                <RadioButton
                    android:id="@+id/radio_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/RadioButonOpcion3"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:paddingStart="12dp" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</ScrollView>
